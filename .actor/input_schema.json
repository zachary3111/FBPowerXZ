{
  "title": "Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "query": {
      "title": "Query",
      "type": "string",
      "description": "Keywords to search for Facebook posts."
    },
    "recent_posts": {
      "title": "Only recent posts",
      "type": "boolean",
      "default": false
    },
    "start_date": {
      "title": "Start date",
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "end_date": {
      "title": "End date",
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "maxResults": {
      "title": "Max results",
      "type": "integer",
      "minimum": 1,
      "maximum": 5000,
      "default": 100
    },
    "proxy": {
      "title": "Proxy (recommended)",
      "type": "object",
      "description": "Apify Proxy configuration object."
    },
    "cookies": {
      "title": "Playwright cookies",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "domain": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "expires": {
            "type": [
              "number",
              "null"
            ]
          },
          "httpOnly": {
            "type": "boolean"
          },
          "secure": {
            "type": "boolean"
          },
          "sameSite": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "value",
          "domain"
        ]
      }
    },
    "session": {
      "title": "Session options",
      "type": "object",
      "properties": {
        "maxPoolSize": {
          "type": "integer"
        },
        "persistState": {
          "type": "boolean"
        },
        "retireOnBlocked": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "query"
  ]
}
