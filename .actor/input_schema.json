{
  "title": "Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "query": { "title": "Query", "type": "string", "description": "Keywords to search for Facebook posts.", "editor": "textfield" },
    "recent_posts": { "title": "Only recent posts", "type": "boolean", "description": "Restrict results to recent posts (best-effort).", "default": false },
    "location_uid": { "title": "Location UID", "type": "string", "description": "Facebook location unique identifier (best-effort filter)." },
    "start_date": { "title": "Start date", "type": "string", "description": "YYYY-MM-DD", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "end_date": { "title": "End date", "type": "string", "description": "YYYY-MM-DD", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "maxResults": { "title": "Max results", "type": "integer", "minimum": 1, "maximum": 5000, "default": 100 },
    "proxy": { "title": "Proxy (recommended)", "type": "object", "editor": "proxy" },
    "cookies": {
      "title": "Playwright cookies",
      "type": "array",
      "description": "Array of cookies to set for m.facebook.com / facebook.com sessions.",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" },
          "domain": { "type": "string" },
          "path": { "type": "string", "default": "/" },
          "expires": { "type": ["number", "null"], "description": "Epoch seconds or null" },
          "httpOnly": { "type": "boolean", "default": false },
          "secure": { "type": "boolean", "default": true },
          "sameSite": { "type": "string", "enum": ["Lax","Strict","None"], "default": "Lax" }
        },
        "required": ["name","value","domain","path"]
      }
    },
    "session": {
      "title": "Session options",
      "type": "object",
      "properties": {
        "maxPoolSize": { "type": "integer", "default": 20, "minimum": 1, "maximum": 200 },
        "persistState": { "type": "boolean", "default": true },
        "retireOnBlocked": { "type": "boolean", "default": true }
      }
    }
  },
  "required": ["query"]
}